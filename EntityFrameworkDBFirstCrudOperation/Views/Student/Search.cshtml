
@{
    ViewBag.Title = "Search";
}

@if (Model.Count > 0)
{
    <h2>Serach Details</h2>
    <br />
    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>
                    <a href="/Student/Details/@item.ID">Details</a>
                    <a href="/Student/Edit/@item.ID">Edit</a>
                    <a href="/Student/Delete/@item.ID">Delete</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <h2>No Student Data Found</h2>
    <a href="/Registration/Register" class="btn btn-success">Go to Registration</a>
}

